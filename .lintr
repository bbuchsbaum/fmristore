linters: linters_with_tags(
    tags = c("style", "correctness", "efficiency"),
    # Tidyverse-specific configuration
    line_length_linter(120),  # Allow longer lines for complex scientific code
    
    # Enforce tidyverse naming conventions
    object_name_linter(styles = c("snake_case", "symbols")),
    
    # Keep some flexibility for scientific packages
    cyclocomp_linter(complexity_limit = 20),  # Allow more complex functions
    object_usage_linter = NULL,               # Can be too strict with metaprogramming
    
    # Additional tidyverse style enforcement
    brace_linter(),
    keyword_quote_linter(),
    function_left_parentheses_linter(),
    paren_body_linter(),
    pipe_call_linter(),
    string_boundary_linter(),
    todo_comment_linter(),
    undesirable_function_linter(),
    undesirable_operator_linter()
  )
exclusions: list(
  "R/zzz_example_helpers.R",     # Helper functions can have different style
  "deprecated/",                 # Don't lint deprecated code
  "tests/testthat.R"            # Standard testthat file
) 